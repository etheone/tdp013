app.get('*', function (req, res) { 
    res.sendStatus(404);
});

app.post('/', function (req, res) {
    
    console.log("Got response: " + res.statusCode);
    var message = req.body['message'];
    var status = functions.saveMessage(req, res, messages, message);
    console.log(req.body['message']);      // your JSON
    res.sendStatus(status);    // echo the result back

});

app.post('*', function(req, res) {
    console.log('Wildcard-post called');
    console.log(req.url);
    res.SendStatus(200);
});

var messages = db.get('messages');
messages.index('message flag');

function start() {
    var server = app.listen(3000, function () {
	var host = server.address().address;
	console.log(host);
	var port = server.address().port;
   
	console.log('Server started.');
    });
}

function clearDb() {

    messages.remove({}, function (err) {

    if (err) throw err;
    });

};


if (require.main === module) {
    clearDb();
    start();
    
}

exports.start = start;

